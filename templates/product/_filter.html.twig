{{ form_start(form, {attr :{class:'filter js-filter-form'}}) }}
{{ form_row(form.q)}}

<h4>Categories</h4>
{{form_row(form.categories)}}

<h4>Prix</h4>
<div class="row">
  <div class="col-md-6">
    {{form_row(form.min)}}
  </div>

  <div class="col-md-6">
    {{form_row(form.max)}}
  </div>
