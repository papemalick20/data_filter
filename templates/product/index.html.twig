{% extends 'base.html.twig' %}

{% block title %}Tous nos produits!{% endblock %}

{% block body %}
  <div class="container js-filter">
    <div class="row">
      <div class="col-md-3">
        {% include 'product/_filter.html.twig' with {
          form : form,
          min: min,
          max: max
        }
        only %}
      </div>
      <div class="col-md-9">
        <div class="d-flex-justify-content text-right mb-2 js-filter-sorting">
          {% include 'product/_sorting.html.twig'%}
        </div>
        <div class="grid js-filter-content">
          {% include 'product/_product.html.twig'%}
        </div>
        <div class="js-filter-pagination">
          {{ knp_pagination_render(products) }}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
